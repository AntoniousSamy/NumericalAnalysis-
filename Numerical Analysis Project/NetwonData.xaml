        xmlns:local="clr-namespace:Numerical_Analysis_Project"
        mc:Ignorable="d"
        Title="NetwonData" 
             Height="334.662" Width="681.873"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="#272537"
            CornerRadius="20">
        <Grid>
            <Grid HorizontalAlignment="Left" Width="170" Background="White"/>
            <Image Source="icon/Logo.jpg" Margin="0,-3,515,179"/>
